{
    "compilerOptions": {
        "target": "ES2022",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "outDir": "dist",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "paths": {
            "@app-types/*": ["./src/types/*"]
        },
        "types": ["node", "jest"]
    },
    "include": ["src", "knexfile.ts"]
}
